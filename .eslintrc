{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "arrowFunctions": true
    }
  },
  "plugins": [
    "class-property",
    "react",
    "jsx-a11y",
    "import",
    "jest"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "quotes": ["warn", "single"],
    "no-debugger": "warn",
    "no-extra-semi": "warn",
    "no-unused-vars": "error",
    "no-console": 0,
    "eqeqeq": "warn",
    "strict": "warn",
    "import/no-extraneous-dependencies": "error",
    "semi": ["error", "always"],
    "react/display-name": 0
  }
}
